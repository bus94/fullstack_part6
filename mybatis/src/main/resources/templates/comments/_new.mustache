<form class="container p-5" action="/articles/newComment" method="post">
<div class="container container-comment">
	<div class="mb-3">
 		<label for="title" class="form-label">닉네임</label>
 		<input type="text" class="form-control" id="title" name="title"/>
	</div>
	<div class="mb-3">
 		<label for="content" class="form-label">댓글</label>
 		<textarea class="form-control" id="content" rows="5" name="content" style="resize: none;"></textarea>
	</div>
	<button type="submit" class="btn btn-primary">댓글 저장</button>
</div>
</form>